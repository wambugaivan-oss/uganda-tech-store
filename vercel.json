{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "frontend/build" 
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    // 1. API route must come first to catch /api/ calls
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    // 2. Catch-all route for the frontend (must match the outputDirectory)
    {
      "src": "/(.*)",
      "dest": "/frontend/build/index.html" 
    }
  ]
}
