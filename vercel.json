{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "frontend/build"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
"routes": [
  {
    // Route for the API (must come first)
    "src": "/api/(.*)",
    "dest": "/api/index.js"
  },
  {
    // Route for the Frontend (catches all other requests)
    "src": "/(.*)",
    "dest": "/index.html"
  }
]
